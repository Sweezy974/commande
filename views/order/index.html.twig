{% include 'base/layout.html.twig'%}
<!-- Container -->
<div class="container dash col s12 m12 l7">
  <div class="row">
    <div class="col-md-12 text-center center">
      <h2 class="text-uppercase">Gestion des commandes</h2>
    </div>
  </div>
  <div class="row">
    <div class="col l12 m12 s12 ">

      {% if orderList.CustomerName is not defined %}
      <table class="centered highlight ">
        <thead>
          <tr>
            <!-- <th data-field="id">Createur</th> -->
            <th data-field="id">Raison Sociale</th>
            <th data-field="id">Code client</th>
            <th data-field="id">N° du document</th>
            <th data-field="id">Date création du document</th>
            <th data-field="id">Montant Devis</th>
            <th data-field="id">Traiter la commande</th>
          </tr>
        </thead>

        <tbody id="results">
          {% for order in orderList %}

          <tr>
            <td>{{ order.CustomerName }}</td>
            <td>{{ order.CustomerId }}</td>
            <td>{{ order.DocumentNumber }}€</td>
            <td>{{ order.sysCreatedDate|date("d/m/Y") }}</td>
            <td>{{ order.DepositAmount }}€ </td>
            <td><a class="btn wave-effect" href="?c=order&t=new&pk={{order.DocumentNumber}}" >traiter</a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
      <h5>rien à afficher</h5>
      {% endif %}


    </div>
  </div>



</div>
</div>
{% include 'base/bottom.html.twig'%}
